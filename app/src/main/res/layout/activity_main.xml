
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlAtmosphere">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvClimate"
        android:text="@string/atmosphere"/>

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvClimate"
    android:text="@string/temperature"
    android:id="@+id/tvTemperature"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvTemperature"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvTemperatureValue"
        />

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTemperature"
        android:text="@string/humidity"
        android:id="@+id/tvHumidity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvHumidity"
        android:layout_alignParentEnd="true"

        android:id="@+id/tvHumidityValue"
        />



        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHumidity"
            android:id="@+id/tvTargetTemperature"
            android:text="@string/targetTemperature"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvTargetTemperature"
            android:layout_alignParentEnd="true"
            android:id="@+id/tvTargetTemperatureValue"
            />

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTargetTemperature"
            android:text="@string/presence"
            android:id="@+id/tvPresence"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvTargetTemperature"
            android:layout_alignBaseline="@id/tvPresence"
            android:id="@+id/swPresence"
            android:onClick="onPresenceClick"/>

    </RelativeLayout>



    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:id="@+id/rlStandingLamp"
        android:layout_below="@id/rlAtmosphere"
        android:layout_marginTop="20sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lighting"
            android:id="@+id/tvLighting"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/led"
            android:onClick="openColourPicker"
            android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/standinglamp"
        android:layout_below="@id/tvLighting"
        android:id="@+id/tvStanding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/off"
        android:layout_below="@id/tvLighting"
        android:layout_toRightOf="@id/tvStanding"
        android:id="@+id/tvStandingState"
        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLighting"
        android:layout_alignParentEnd="true"
        android:weightSum="2"
       >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStandingOn"
            android:text="@string/on"
            android:layout_weight="1"
            android:onClick="onSwitch"
            android:tag="standing_on"

           />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStandingOff"
            android:text="@string/off"
            android:layout_weight="1"
            android:onClick="onSwitch"
            android:tag="standing_off"
             />
    </LinearLayout>

</RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rlStandingLamp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlTwilights"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twilights"

            android:id="@+id/tvTwilight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:id="@+id/tvTwilightState"
            android:layout_toRightOf="@id/tvTwilight"

            android:layout_marginLeft="10sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnTwilightOn"
                android:text="@string/on"
                android:layout_weight="1"
                android:onClick="onSwitch"
                android:tag="twilights_on"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnTwilightOff"
                android:text="@string/off"
                android:layout_weight="1"
                android:onClick="onSwitch"
                android:tag="twilights_off"

                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rlTwilights"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlDesklight"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desklight"

            android:id="@+id/tvDesklight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:id="@+id/tvDesklightState"
            android:layout_toRightOf="@id/tvDesklight"

            android:layout_marginLeft="10sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnDesklightOn"
                android:text="@string/on"
                android:layout_weight="1"
                android:onClick="onSwitch"
                android:tag="desklight_on"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnDesklightOff"
                android:text="@string/off"
                android:layout_weight="1"
                android:onClick="onSwitch"
                android:tag="desklight_off"

                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rlDesklight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlUplighter"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uplighter"

            android:id="@+id/tvUplighter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:layout_toRightOf="@id/tvUplighter"
            android:id="@+id/tvUpligherState"
            android:layout_marginLeft="10sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnUplightOn"
                android:text="@string/on"
                android:layout_weight="1"
                android:onClick="onSwitch"
                android:tag="uplighter_on"


                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnUplightOff"
                android:text="@string/off"
                android:layout_weight="1"
                android:onClick="onSwitch"
                android:tag="uplighter_off"

                />


        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>
